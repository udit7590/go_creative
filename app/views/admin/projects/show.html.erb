<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @project.title %></h3>
  </div>
  <div class="panel-body">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#project-details" role="tab" data-toggle="tab" aria-expanded="true">Details</a></li>
      <li role="presentation"><a href="#user-details" role="tab" data-toggle="tab">User Details</a></li>
      <li role="presentation"><a href="#project-comments" role="tab" data-toggle="tab">Comments</a></li>
      <li role="presentation"><a href="#project-contributors" role="tab" data-toggle="tab">Contributors</a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
      <div role="tabpanel" class="tab-pane fade in active" id="project-details">
        <br />
        <%= render 'project_details' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="user-details">
        <br />
        <%= render 'user_details' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="project-comments">
        <br />
        <%= render 'project_comments' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="project-contributors">
        <br />
        <%= render 'project_contributors' %>
      </div>
    </div>
  </div>
  </div>
</div>

<!-- JS --> 
<% content_for :javascripts do %>
  <%= javascript_include_tag 'content_loader', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'comment', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'comments_page', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'admin_project_view', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'admin_user_detail_page', 'data-turbolinks-track' => true %>
<% end %>
