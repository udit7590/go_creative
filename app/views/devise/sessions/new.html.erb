<div class="span4 col-md-6 "></div>
  <div class="formContainer span4 col-md-6 ">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, class: 'form-control input-block-level', placeholder: 'Email Address', required: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control input-block-level', placeholder: 'Password', required: true %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit 'Log in', class: 'btn btn-inverse btn-block' %>
      </div>
    <% end %>

<%= render "devise/shared/links" %>
</div>
