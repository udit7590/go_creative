<div class="span4 col-md-6 "></div>
<div class="formContainer span4 col-md-6 ">
  <h3>Resend confirmation instructions</h3>

  <%= form_for(resource, as: resource_name, url: user_confirmation_path, html: { method: :post }) do |f| %>
    <%= devise_error_messages %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, class: 'form-control input-block-level', placeholder: 'Email Address', required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Resend confirmation instructions", class: 'btn btn-inverse btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
