
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <strong><%= link_to "Forgot your password?", new_user_password_path(resource_name) %></strong><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <strong><%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path(resource_name) %></strong><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <strong><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></strong><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <strong><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></strong><br />
  <% end -%>
<% end -%>
