<tr>
  <td><%= project.id %></td>
  <td><%= project.title %></td>
  <td><%= humanize_sti_class(project.type) %></td>
  <td><strong><%= project.state.humanize %></strong></td>
  <td><%= number_to_currency(project.amount_required, unit: 'INR ') %></td>
  <td><%= project.created_at.to_s(:short) %></td>
  <td><%= project.end_date.to_date.to_s(:long) %></td>
  <td>
      <%= link_to project_path(project), rel: 'tooltip', title: 'View' do %>
        <i class="icon-home"></i>
      <% end %>
      <% if project.state == 'created' %>
        <%= link_to edit_project_path(project), rel: 'tooltip', title: 'Edit' do %>
          <i class="icon-edit"></i>
        <% end %>
      <% end %>
      <%= link_to project_path(project), method: :delete, rel: 'tooltip', title: 'Delete', data: { confirm: 'Are you sure you want to delete this project?' } do %>
        <i class="icon-trash"></i>
      <% end %>
  </td>
</tr>