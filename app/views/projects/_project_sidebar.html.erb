<div class="span4 sidebar">

  <!--Starter Info-->
  <center>
    <%= image_tag 'site/user_profile1.png' %>
    <p class="title-bg text-special">Project Starter: <%= @project.user.first_name%></p>
  </center>

  <!--Project Info-->
  <center><h4 class="title-bg">Target: <span class="text-special"><%= number_to_currency(@project.amount_required, unit: 'INR ') %></span> By <span class="text-special"><%= @project.end_date.to_date.to_s(:short) %></span></h4>
  <h4 class="title-bg">Collected: <span class="text-special">INR 0</span><br /><meter value='0' max='100' style="width: 80%"><span>0</span>%</meter> 0%</h4>
  </center>

  <% if @project.user != current_user %>
    <%= form_for(@project, url: '', method: :post, html: { class: 'form-horizontal' }) do |f| %>
      <div class="input-prepend">
        <span class="add-on-block">INR</span>
        <%= f.number_field :min_amount_per_contribution, class: 'input-block', placeholder: 'Contribute', required: true, step: 100, max: 10000000 %>
      </div>

      <div class="control-group">
        <p>Min amount required: INR <%= @project.min_amount_per_contribution %></p>
        <%= f.submit contribute_button_text(@project.type), class: 'btn btn-primary btn-large btn-block' %>
      </div>
    <% end %>
  <% elsif !@project.published? && project.user == current_user %>
    <%= link_to (button_tag 'Edit', class: 'btn btn-primary btn-large btn-block'), edit_project_path(@project) %>
  <% end %>

  <% unless @project.video_link.empty? %>
    <!--Video Widget-->
    <h5 class="title-bg">Project Video</h5>
    <!-- <iframe src="http://player.vimeo.com/video/24496773" width="370" height="208"></iframe> -->
    <span data-src="<%= @project.video_link %>" id="embeddedVideo"></span>
  <% end %>

  <!--Categories-->
  <h5 class="title-bg">Inquiry</h5>
  <ul class="post-category-list">
    <li><a href="#"><i class="icon-plus-sign"></i>Gifts</a></li>
    <li><a href="#"><i class="icon-plus-sign"></i>Contact Project Starter</a></li>
    <li><a href="#"><i class="icon-plus-sign"></i>FAQs</a></li>
  </ul>

  <!--Tabbed Content-->
  <h5 class="title-bg">More Info</h5>
  
</div>
