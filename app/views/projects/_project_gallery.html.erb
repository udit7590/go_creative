
<!-- Gallery
  ================================================== --> 
  <h4 class="title-bg">Gallery</h4>
  <div class="row no-margin">
    <ul class="gallery-post-grid holder">

      <% @project.images.each do |image| %>
        <!-- Gallery Item -->
        <li class="span3 gallery-item" data-id="id-1" data-type="illustration">
          <a href="<%= image.image.url %>" data-lightbox="gallery"><%= image_tag image.image.url(:thumbnail) %></a>
        </li>
      <% end %>
    </ul>
  </div>
  <% if @project.images.length == 0 %>
    <center><h6 class="text-warning">No gallery exists for this project.</h6></center>
    <br />
  <% end %>
